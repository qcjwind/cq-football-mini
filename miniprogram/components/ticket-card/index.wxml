<!-- components/order-card/order-card.wxml -->
<view class="order-card" bindtap="onCardTap">
  <view class="match-image">
    <image src="{{orderInfo.matchCover}}" mode="aspectFill" class="cover-img"></image>
  </view>
  <view class="divider"></view>
  <view class="match-info">
    <view class="match-item">
      <text class="match-tip">比赛</text>
      <text class="match-title">{{orderInfo.matchName}}</text>
    </view>
    <view class="match-item">
      <text class="match-tip">时间</text>
      <text class="match-time">{{orderInfo.startTime}}</text>
      <view class="action-button">
        <text class="button-text">查看我的票</text>
      </view>
    </view>
  </view>
</view>