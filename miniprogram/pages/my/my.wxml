<!--pages/my/my.wxml-->
<view class="my-container">
  <!-- 需要注册的用户信息区域 -->
  <view class="user-info-section" style="background-image: url('/assets/my_back.png');" bindtap="goToLogin" wx:if="{{!isLoggedIn && needRegister}}">
    <view class="user-avatar">
      <image src="/assets/default-avatar.png" mode="aspectFill" class="default-avatar"></image>
    </view>
    <view class="user-details">
      <view class="username">立即注册</view>
      <view class="user-desc">完善个人信息，开始足球之旅</view>
    </view>
    <view class="user-action">
      <text>注册</text>
    </view>
  </view>

  <!-- 需要登录的用户信息区域 -->
  <view class="user-info-section" style="background-image: url('/assets/my_back.png');" bindtap="goToLogin" wx:elif="{{!isLoggedIn}}">
    <view class="user-avatar">
      <image src="/assets/default-avatar.png" mode="aspectFill" class="default-avatar"></image>
    </view>
    <view class="user-details">
      <view class="username">立即登录</view>
      <view class="user-desc">欢迎来到足球世界</view>
    </view>
    <view class="user-action">
      <text>登录</text>
    </view>
  </view>
  
  <!-- 已登录状态的用户信息区域 -->
  <view class="user-info-section" style="background-image: url('/assets/my_back.png');" wx:else>
    <view class="user-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="user-details">
      <view class="username">
        <open-data type="userNickName"></open-data>
      </view>
      <view class="user-desc">欢迎来到足球世界</view>
    </view>
  </view>

  <!-- Tab切换区域 -->
  <view class="tab-section">
    <view class="tab-bar">
      <view class="tab-item {{activeTab === 'order' ? 'active' : ''}}" bindtap="switchTab" data-tab="order">
        <text class="tab-text">订单</text>
      </view>
      <view class="tab-item {{activeTab === 'ticket' ? 'active' : ''}}" bindtap="switchTab" data-tab="ticket">
        <text class="tab-text">票夹</text>
      </view>
    </view>
  </view>

  <!-- 内容区域 -->
  <view class="content-section">
    <!-- 订单内容 -->
    <view class="tab-content" wx:if="{{activeTab === 'order'}}">
      <view class="empty-state">
        <text class="empty-text">暂无订单</text>
      </view>
    </view>

    <!-- 票夹内容 -->
    <view class="tab-content" wx:if="{{activeTab === 'ticket'}}">
      <view class="ticket-list">
        <ticket-card 
          wx:for="{{ticketList}}" 
          wx:key="id"
          match-title="{{item.matchTitle}}"
          cover-image="{{item.coverImage}}"
          order-time="{{item.orderTime}}"
          bind:cardtap="onTicketCardTap">
        </ticket-card>
      </view>
    </view>
  </view>
</view>
