<!--pages/my/my.wxml-->
<view class="my-container">
  <!-- 需要注册的用户信息区域 -->
  <view class="user-info-section" style="background-image: url('/assets/my_back.png');" bindtap="goToLogin" wx:if="{{!isLoggedIn && needRegister}}">
    <view class="user-avatar">
      <image src="/assets/default-avatar.png" mode="aspectFill" class="default-avatar"></image>
    </view>
    <view class="user-details">
      <view class="username">立即注册</view>
      <view class="user-desc">完善个人信息，开始足球之旅</view>
    </view>
    <view class="user-action">
      <text>注册</text>
    </view>
  </view>

  <!-- 需要登录的用户信息区域 -->
  <view class="user-info-section" style="background-image: url('/assets/my_back.png');" bindtap="goToLogin" wx:elif="{{!isLoggedIn}}">
    <view class="user-avatar">
      <image src="/assets/default-avatar.png" mode="aspectFill" class="default-avatar"></image>
    </view>
    <view class="user-details">
      <view class="username">立即登录</view>
      <view class="user-desc">欢迎来到足球世界</view>
    </view>
    <view class="user-action">
      <text>登录</text>
    </view>
  </view>
  
  <!-- 已登录状态的用户信息区域 -->
  <view class="user-info-section" style="background-image: url('/assets/my_back.png');" wx:else>
    <view class="user-avatar">
      <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
        <image class="avatar" src="{{userInfo.avatarUrl || '/assets/default-avatar.png'}}"></image>
      </button>
    </view>
    <view class="user-details">
      <input type="nickname" class="nickname-input" placeholder="请输入昵称" value="{{userInfo.nickname || ''}}" disabled="{{!!userInfo.nickname}}" bind:change="onInputChange" />
      <view class="user-desc">欢迎您，祝你愉快</view>
    </view>
  </view>

  <!-- Tab切换区域 -->
  <view class="tab-section">
    <view class="tab-bar">
      <view class="tab-item {{activeTab === 'order' ? 'active' : ''}}" bindtap="switchTab" data-tab="order">
        <text class="tab-text">订单</text>
      </view>
      <view class="tab-item {{activeTab === 'ticket' ? 'active' : ''}}" bindtap="switchTab" data-tab="ticket">
        <text class="tab-text">票夹</text>
      </view>
    </view>
  </view>

  <!-- 内容区域 -->
  <view class="content-section">
    <!-- 订单内容 -->
    <view class="tab-content" wx:if="{{activeTab === 'order'}}">
      <!-- 加载状态 -->
      <view wx:if="{{orderLoading}}" class="loading-container">
        <text>加载中...</text>
      </view>
      
      <!-- 订单列表 -->
      <view wx:elif="{{orderList.length > 0}}" class="order-list">
        <view class="order-card" wx:for="{{orderList}}" wx:key="id" bindtap="onOrderCardTap" data-id="{{item.id}}">
          <view class="order-header">
            <text class="order-no">订单号：{{item.orderNo}}</text>
            <text class="order-time">{{item.gmtCreate}}</text>
          </view>
          <view class="order-content">
            <text class="order-title">赛事ID：{{item.matchId}}</text>
            <view class="order-details">
              <text class="order-sku">SKU ID：{{item.skuId}}</text>
              <text class="order-quantity">数量：{{item.buyNum}}</text>
            </view>
            <view class="order-price">
              <text class="price-label">总价：</text>
              <text class="price-value">¥{{item.totalPrice}}</text>
            </view>
          </view>
        </view>
      </view>
      
      <!-- 空状态 -->
      <view wx:else class="empty-state">
        <image src="/assets/no-order.png" class="empty-image" mode="aspectFit"></image>
        <view class="empty-title">暂无订单</view>
        <view class="empty-desc">快去购买门票观看精彩比赛吧</view>
        <button class="buy-button" bindtap="goToHome">去购买</button>
      </view>
    </view>

    <!-- 票夹内容 -->
    <view class="tab-content" wx:if="{{activeTab === 'ticket'}}">
      <!-- 加载状态 -->
      <view wx:if="{{ticketLoading}}" class="loading-container">
        <text>加载中...</text>
      </view>
      
      <!-- 票务列表 -->
      <view wx:elif="{{ticketList.length > 0}}" class="ticket-list">
        <ticket-card 
          wx:for="{{ticketList}}" 
          wx:key="id"
          ticket-info="{{item}}"
          bind:cardtap="onTicketCardTap">
        </ticket-card>
      </view>
      
      <!-- 空状态 -->
      <view wx:else class="empty-state">
        <image src="/assets/no-order.png" class="empty-image" mode="aspectFit"></image>
        <view class="empty-title">暂无票务</view>
        <view class="empty-desc">快去购买门票观看精彩比赛吧</view>
        <button class="buy-button" bindtap="goToHome">去购买</button>
      </view>
    </view>
  </view>
</view>
